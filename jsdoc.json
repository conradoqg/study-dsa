{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ "src/", "test/" ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"       
    ],
    "opts": {
        "destination": "./doc/",
        "recurse": true,
        "package": "./package.json",
        "readme": "./README.md",
        "encoding": "utf8"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    }
}
